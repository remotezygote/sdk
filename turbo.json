{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "test:lint": {},
        "test": {
            "dependsOn": ["test:lint"]
        },
        "dev": {
            "dependsOn": ["build"]
        },
        "dev:sample-app": {
            "dependsOn": ["build"]
        },
        "test:e2e": {
            "dependsOn": ["^build", "dev:sample-app"],
            "outputs": ["playwright-*"]
        },
        "start": {
            "cache": false,
            "persistent": true
        }
    }
}